<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:id="@+id/titlebarLayout"
    android:background="#ff515151">
    <ImageView android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:padding="5dp"
        android:src="@drawable/back"
        android:id="@+id/titlebarLeftImg"
        android:background="@drawable/btn_background"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="match_parent"
        android:id="@+id/titlebarRightLayout"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titlebarRightText"
            android:singleLine="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:id="@+id/titlebarRightImg"
            android:padding="5dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_background"
            />
    </RelativeLayout>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:layout_toRightOf="@id/titlebarLeftImg"
        android:layout_toLeftOf="@id/titlebarRightLayout"
        android:textColor="#ffffffff"
        android:singleLine="true"
        android:textSize="20dp"
        android:text="@string/app_name"
        android:layout_marginLeft="2dp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
